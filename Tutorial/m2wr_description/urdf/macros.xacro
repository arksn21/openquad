<?xml version="1.0" ?>
<robot>
<macro name="link_wheel" params="name">
 <link name="${name}">
    <inertial>
      <mass value="0.2"/>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <inertia ixx="0.000526666666667" ixy="0" ixz="0" iyy="0.000526666666667" iyz="0" izz="0.001"/>
    </inertial>
    <collision name="${name}_collision">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.1"/>
      </geometry>
    </collision>
    <visual name="${name}_visual">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.1"/>
      </geometry>
    </visual>
  </link>
</macro>

<macro name="joint_wheel" params="name child origin_xyz">
  <joint name="${name}" type="continuous">
    <origin rpy="0 0 0" xyz="${origin_xyz}"/>
    <child link="${child}"/>
    <parent link="link_chassis"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>


</macro>
<macro name="ultrasonic_sensor" params="name">
<link name="${name}">
    <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="1" />
        <inertia  ixx="0.0001" ixy = "0" ixz = "0"
            iyy="0.0001" iyz = "0"
            izz="0.00005" />
    </inertial>
 
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
<cylinder radius="0.01" length="0.03"/>
</geometry>
<material name="white"/>
</visual>
<collision>
<origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
<cylinder radius="0.01" length="0.03"/>
</geometry>
</collision>
</link>
</macro>

<macro name="joint_sensor" params="name child origin_xyz origin_rpy">
 <joint name="${name}" type="fixed">
    <origin xyz="${origin_xyz}" rpy="${origin_rpy}"/>
    <child link="${child}"/>
    <parent link="link_chassis"/>
</joint> 
</macro>
</robot>
